{
  "name": "livepeer-alerts-backend",
  "version": "0.1.0",
  "description": "Provide pro-active alert notifications that will help LPT token holders to be updated and understand how the transcoders they are delegating the tokens to are performing in near real time.",
  "author": "Protofire @protofire",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.5.1"
  },
  "scripts": {
    "start": "node index.js",
    "lint": "esw *.js server config --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha  test/*.test.js --timeout=1200000 --ui bdd --reporter spec --colors server",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- test/*.test.js --timeout=1200000 --ui bdd --reporter spec --colors server",
    "test:check-coverage": "npm run test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:protofire/livepeer-alerts-backend.git"
  },
  "keywords": [
    "blockchain",
    "livepeer"
  ],
  "dependencies": {
    "@mariano-aguero/sdk": "^1.0.0-alpha.6",
    "@sendgrid/mail": "^6.3.1",
    "big.js": "^5.2.2",
    "bluebird": "3.5.1",
    "bn.js": "^4.11.8",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "debug": "^2.4.5",
    "dotenv": "^4.0.0",
    "ethjs-unit": "^0.1.6",
    "express": "4.16.3",
    "express-validation": "1.0.2",
    "express-winston": "2.5.0",
    "handlebars": "^4.1.2",
    "helmet": "3.12.0",
    "host-validation": "^2.0.1",
    "http-status": "1.0.1",
    "joi": "10.6.0",
    "lodash": "^4.17.11",
    "method-override": "^2.3.10",
    "minimist": "^1.2.0",
    "moment": "^2.23.0",
    "mongoose": "^5.4.0",
    "morgan": "^1.9.1",
    "node-telegram-bot-api": "^0.30.0",
    "promise-retry": "^1.1.1",
    "striptags": "^3.1.1",
    "web3": "github:ethereum/web3.js",
    "winston": "2.4.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "4.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "5.1.4",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "5.6.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-watch": "2.1.14",
    "husky": "1.3.0",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "supertest": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
